extends layout.pug

block content
    h1=title
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(method='post',action='/posts/add', enctype="multipart/form-data")
        .form-group
            label Title:
            input.form-control(name='title', type='text')
        .form-group
            label Category:
            select.form-control(name='category', type='text')
                each category, i in categories
                    option(value='#{category.name}') #{category.name}
        .form-group
            label Body:
            textarea.form-control(name='body', type='text', id='body')
        .form-group
            label Main image:
            input.form-control(name='mainimage', type='file')   
        .form-group
            label Author:
            select.form-control(name='author')
                option(value='Jose Torreblanca') Jose Torreblanca
                option(value='Jan Torreblanca') Jan Torreblanca
        input.btn.btn-default(name='submit', type='submit',value='Save')